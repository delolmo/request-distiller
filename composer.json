{
    "name": "delolmo/request-distiller",
    "type": "library",
    "description": "Powerful, flexible validation and filtering for PSR-7 requests.",
    "keywords": [
        "psr-7",
        "http",
        "validate",
        "validator",
        "filter",
        "zend-filter",
        "zend-validator"
    ],
    "homepage": "https://github.com/delolmo/request-distiller",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "psr/http-message": "^1.0",
        "zendframework/zend-filter": "^2.8",
        "zendframework/zend-validator": "^2.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.0",
        "zendframework/zend-diactoros": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DelOlmo\\Distiller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DelOlmo\\Distiller\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "phpunit --coverage-html=coverage",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse",
        "phpunit": "phpunit --configuration phpunit.xml.dist",
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ]
    },
    "support": {
        "issues": "https://github.com/delolmo/request-distiller/issues"
    }
}
