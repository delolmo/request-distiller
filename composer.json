{
    "name": "delolmo/request-distiller",
    "type": "library",
    "description": "Provides a utility for validating and filtering a PSR Request.",
    "license": "MIT",
    "homepage": "https://github.com/delolmo/request-distiller",
    "support": {
        "issues": "https://github.com/delolmo/request-distiller/issues"
    },
    "autoload": {
        "psr-4": {
            "DelOlmo\\Distiller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DelOlmo\\Distiller\\": "tests/"
        }
    },
    "require": {
        "php": "^5.5 || ^7.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-message": "^1.0",
        "zendframework/zend-filter": "^2.8",
        "zendframework/zend-validator": "^2.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^3.0",
        "zendframework/zend-diactoros": "^2.0"
    },
    "scripts": {
        "test": [
            "phpunit --configuration phpunit.xml.dist",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix .",
        "coverage": "phpunit --coverage-html=coverage"
    }
}
